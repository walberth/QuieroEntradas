<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLastSearchbackground">

    <ImageView
        android:id="@+id/imgPictureSearched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgPictureSearched"
        android:text="Mar de Copas en el Estadio Nacional" />

    <TextView
        android:id="@+id/eventArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imgPictureSearched"
        android:text="MAR DE COPAS" />

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/imgPictureSearched"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/imgPictureSearched"
        android:text="14/03/2018" />
</RelativeLayout>