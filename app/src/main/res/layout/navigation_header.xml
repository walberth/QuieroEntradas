<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="16dp"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@drawable/navigation_drawer_header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/niv_header_photo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/avatar_main_user"
        android:scaleType="centerCrop"
        android:contentDescription="@string/navDrawerUser" />

    <TextView
        android:id="@+id/niv_header_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/niv_header_email"
        android:layout_width="wrap_content"
        android:text="Test"
        android:layout_height="wrap_content"
        android:paddingTop="4dp" />

</LinearLayout>