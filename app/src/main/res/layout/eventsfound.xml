<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLastSearchbackground">

    <ImageView
        android:id="@+id/eventImageFound"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="#fff"
        app:srcCompat="@drawable/descarga" />

    <TextView
        android:id="@+id/eventNameFound"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/eventImageFound"
        android:text="CONCIERTO TODOS JUNTOS CON TU PRIMA"
        android:textSize="10dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventLocationFound"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Av. Mariam Quimper 897"
        android:textAlignment="center"
        android:textSize="10dp"/>
    <Button
        android:id="@+id/btnSeeEventFound"
        android:layout_width="69dp"
        android:layout_height="27dp"
        android:background="@null"
        android:text="Ver mas"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/eventImageFound"
        android:textAllCaps="false"
        android:textColor="@color/colorStatusBar"
        android:textSize="16sp"/>

</RelativeLayout>